%div.user_attributes
  %p
    %ul.show_username
      %li
        username:
        = current_user.username
      %li
        email:
        = current_user.email
      %li
        = link_to 'Edit User', edit_user_path(current_user)
  %div= filepicker_image_tag current_user.filepicker_url

%div
  %p#created_spots
    Spots that you created

  %div.spot
    - current_user.spots.each do |spot|
      %ul
        %li
          = spot.address_1
          = spot.address_2
        %li
          = spot.city
          ,
          = spot.state
          = spot.zip_code
        %li.home_images= link_to(filepicker_image_tag(spot.filepicker_url), spot_path(spot.id))
